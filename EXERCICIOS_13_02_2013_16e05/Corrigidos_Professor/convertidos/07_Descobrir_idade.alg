algoritmo "Descobrir_Idade"
// Função :
// Autor :
// Data : 13/10/2012
// Seção de Declarações
var


ano, idade ,anoAtual: inteiro


inicio
anoAtual := 2012


escreval("Informe o seu ano de nascimento: ")
leia(ano)
idade := anoAtual - ano

escreval("Sua idade é: ", idade)

Se (idade >= 16) entao
   escreval("Você já está apto a votar.")
FimSe



fimalgoritmo
